# Font MIME Types Configuration for Vercel
# https://vercel.com/docs/project-configuration

# TTF - TrueType Font (current format)
/fonts/**/*.ttf
  Content-Type: font/ttf
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# WOFF - Web Font Format (future conversion target)
/fonts/**/*.woff
  Content-Type: font/woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# WOFF2 - Modern Web Font Format (future conversion target)
/fonts/**/*.woff2
  Content-Type: font/woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# OTF - OpenType Font
/fonts/**/*.otf
  Content-Type: font/otf
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# EOT - Embedded OpenType (legacy IE)
/fonts/**/*.eot
  Content-Type: application/vnd.ms-fontobject
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
